# Secret Configuration File
# SECURITY: This file is .gitignored and should NEVER be committed to Git
# 
# Usage:
# 1. Copy this file to secret.config
# 2. Replace placeholder values with real secrets
# 3. Never commit secret.config to version control
#
# To generate a random API key:
#   python3 -c "import secrets; print(secrets.token_urlsafe(32))"

[webapp]
# API authentication key - required for production deployments
# If not set, API endpoints will not require authentication (development only)
# Generate a new key: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
api_key = your-secret-api-key-here-replace-with-random-value

[alerts]
# Email credentials for alert notifications
# Only needed if alerts are enabled in tracker.config
smtp_username = your-email@gmail.com
smtp_password = your-app-specific-password

# Email recipient address for alerts
email_to = recipient@example.com
