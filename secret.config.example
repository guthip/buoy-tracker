# Secret Configuration File
# SECURITY: This file is .gitignored and should NEVER be committed to Git
# 
# Usage:
# 1. Copy this file to secret.config
# 2. Replace placeholder values with real secrets
# 3. Never commit secret.config to version control
#
# For API password: Use a memorable phrase (e.g., "SycLovesBoats")
# This will be entered by users in the browser login modal

[webapp]
# API authentication password - required for production deployments
# Use a memorable password that's easy to distribute securely
# Users will enter this password in the browser when accessing remotely
# Change this to a unique password for your deployment
api_key = YourSecurePasswordHere

[alerts]
# Email credentials for alert notifications
# Only needed if alerts are enabled in tracker.config
smtp_username = your-email@gmail.com
smtp_password = your-app-specific-password

# Email recipient address for alerts
email_to = recipient@example.com
